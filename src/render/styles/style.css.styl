a, a:link
  cursor pointer

body
  padding-top 60px

table
  tfoot, tbody
    th
      border-top 1px solid #DDD

footer
  padding-bottom 30px

.footnote
  font-style italic
  font-size 12px

iframe.twitter-timeline
	width 100% !important

.carousel-caption
	position absolute
	top -20px
	color #000
	text-shadow none

video
